	height 41px
	position relative
	background color-azul-principal

.franja-azul
	height 41px
	width 47%
	float left
	background color-azul-principal

.franja-mitad
	float left
	height 41px
	background url('../img/midle-colors.png') center center
	background-size cover
	width 6%
