.banner
	h1 
		font-size 6em
		font-family 'Raleway', sans-serif
		font-weight bold
		margin 0
		padding 0
	p 
		font-size 3em
		font-family 'Raleway', sans-serif
		font-weight lighter
		margin 0
		padding 0

.section-banner
	height auto


.aside
	background color-cafe-sublime
	height 371px
	position relative
	h3 
		color white
		font-family: 'Shadows Into Light Two', cursive;
	p 
		color white

.flecha-back
	position absolute
	left -34px
	top 50%
	height 50px
	margin-top -25px
	transform rotate(90deg)
	span 
		font-size 5em