.franja-amarilla
	height 41px 
	width 47%
	float left
	background color-amarillo-secundario

.flecha-back
	position absolute
	left -34px
	top 50%
	height 50px
	margin-top -25px
	transform rotate(90deg)
	span 
		font-size 5em

.miperfil	
	padding 2em
	overflow hidden
	background url ('../img/layout-code.jpg')
	background #333
	box-shadow 1px 1px 10px 1px #222
	h3 
		color color-amarillo-secundario
		font-family: 'Raleway', sans-serif;
		font-weight bold
		font-size 2em
		text-shadow 1px 1px 1px black

	p 
		color white
		font-family: 'Yanone Kaffeesatz', sans-serif;
		font-size 18px
		font-weight lighter
		margin 0

.fortalezas
	background url('../img/mosaico.jpg')

.box
	padding 1em
	h3 
		font-size 1em
		color white
	p 
		color white
		font-family: 'Yanone Kaffeesatz', sans-serif;
		font-size 18px
		font-weight lighter
		margin 0
.dark 
	background #222
	position relative
	&:after
		position absolute
		content "\e603"
		font-family cquin22
		font-size 50px
		top 40%
		color #333
		left -19px
		transform rotate(-90deg)
	&:before
		position absolute
		content "\e603"
		font-family cquin22
		font-size 50px
		top 40%
		color #333
		right -19px
		transform rotate(90deg)
.porfolio 
	background color-azul-principal
	padding 2em
	overflow hidden
	h3 
		color color-amarillo-secundario
		font-family: 'Raleway', sans-serif;
		font-weight bold
		font-size 2em
		text-shadow 1px 1px 1px black
	p 
		color white
		font-family: 'Yanone Kaffeesatz', sans-serif;
		font-size 18px
		font-weight lighter
		margin 0

.box-portafolio
	background rgba(white,0.1)
	padding 2em
	margin-bottom 1px
	border-left 1px solid color-azul-principal
	border-right 1px solid color-azul-principal

.image-code
	width 30%
	float left
	background color-cafe-sublime
	padding 1em	

.competencias
	width 70%
	background color-azul-principal
	float left	

.bg-image-slide
	position relative
	img 
		width 100%
		height auto	

.textos-slide
	position absolute
	height 300px
	width 600px
	margin-top -150px
	top 50%
	left 50%
	margin-left -300px	
	z-index 100
	h1 
		font-size 6em
		color white
		margin 0
		font-family: 'Raleway', sans-serif
		font-weight bold
		text-shadow 1px 1px 1px black
		text-transform uppercase		
		padding 0
	h2 
		font-size 6em
		color white
		margin 0
		font-family: 'Raleway', sans-serif
		font-weight bold
		text-shadow 1px 1px 1px black
		text-transform uppercase
		margin-top 0px
		padding 0			
	p 
		color white
		font-size 1.5em
		background rgba(black,0.5)
		padding 0.5em
		margin-top 0px 
		color color-amarillo-secundario				


.top-fixed
	position fixed
	z-index 200
	background rgba(color-cafe-sublime, 0.7)
	top 0
	left 0


