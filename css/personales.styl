body
	font-family: 'Raleway', sans-serif	

header 
	background color-cafe-sublime
	height 70px
	width 100%
	//top 0
	position relative
	overflow hidden
	//z-index 99999999999

nav
	position absolute
	top 0
	right 0
	margin 0
	padding 0
	ul 
		list-style none
		margin 0
		padding 0
		li 
			display inline-block
						
		
figure 
	margin 0
	padding 0		

.logo 
	margin 0
	height 70px
	img
		height 50px
		position absolute
		top 50%
		left 2px
		margin-top -25px

.menu
	background color-azul-principal
	color white
	margin-right -3px
	height 70px
	line-height 70px
	padding 23px 29px
	font-family: 'Yanone Kaffeesatz', sans-serif;
	font-size 20px
	font-weight lighter
	&:hover
		background color-amarillo-secundario
		color color-cafe-sublime

.face 
	background #222
	padding 30px 29px
	margin-right -3px
	height 70px
	line-height 70px	
	color white

	margin-top -10px
	span 
		font-size 20px
		
	&:hover
		background color-facebook
		color white


.twitter 
	background #222
	padding 30px 29px
	margin-right -3px
