body
	font-family: 'Raleway', sans-serif
	

header 
	background color-cafe-sublime
	height 70px
	width 100%
	//top 0
	position relative
	overflow hidden
	//z-index 99999999999

nav
	position absolute
	top 0
	right 0
	margin 0
	padding 0
	ul 
		list-style none
		margin 0
		padding 0
		li 
			display inline-block
						
		
figure 
	margin 0
	padding 0		

.logo 
	margin 0
	height 70px
	img
		height 50px
		position absolute
		top 50%
		left 2px
		margin-top -25px

.menu
	background color-azul-principal
	color white
	margin-right -3px
	height 70px
	line-height 70px
	padding 23px 29px
	font-family: 'Yanone Kaffeesatz', sans-serif;
	font-size 20px
	font-weight lighter
	&:hover
		background color-amarillo-secundario
		color color-cafe-sublime

.face 
	background #222
	padding 30px 29px
	margin-right -3px
	height 70px
	line-height 70px	
	color white

	margin-top -10px
	span 
		font-size 20px
		
	&:hover
		background color-facebook
		color white


.twitter 
	background #222
	padding 30px 29px
	margin-right -3px
	color white
	height 70px
	line-height 70px
	span 
		font-size 20px			
	&:hover
		background color-twitter
		color white

.google 
	background #222
	padding 30px 29px
	margin-right -3px
	color white
	height 70px
	line-height 70px
	span 
		font-size 20px		
	&:hover
		background color-google
		color white




.icon-menu 
	background color-azul-principal
	padding 30px 29px
	margin-right -3px
	color white
	height 70px
	line-height 70px
	span 
		font-size 20px		
	&:hover
		background color-amarillo-secundario
		color color-cafe-sublime



.banner
	h1 
		font-size 6em
		font-family 'Raleway', sans-serif
		font-weight bold
		margin 0
		padding 0
	p 
		font-size 3em
		font-family 'Raleway', sans-serif
		font-weight lighter
		margin 0
		padding 0

.section-banner
	height auto


.aside
	background color-cafe-sublime
	height 373px
	position relative
	h3 
		color white
		font-family: 'Raleway', sans-serif	
	p 
		color white

.franja-azul
	height 41px
	width 47%
	float left
	background color-azul-principal

.franja-mitad
	float left
	width 6%
	margin 0	

.franja-amarilla
	height 41px 
	width 47%
	float left
	background color-amarillo-secundario

.flecha-back
	position absolute
	left -34px
	top 50%
	height 50px
	margin-top -25px
	transform rotate(90deg)
	span 
		font-size 5em

.perfil
	margin-top -2px

.image-code
	width 30%
	float left
	background color-cafe-sublime
	padding 1em	

.competencias
	width 70%
	background color-azul-principal
	float left	

.bg-image-slide
	position relative
	img 
		width 100%
		height auto	

.textos-slide
	position absolute
	height 300px
	margin-top -150px
	top 50%
	left 30%
	z-index 999999999999999999
	h1 
		font-size 7em
		color white
		margin 0
		font-family: 'Raleway', sans-serif
		font-weight bold
		text-shadow 1px 1px 1px black
	p 
		color white
		font-size 1.5em
		background rgba(black,0.5)
		padding 0.5em 
		color color-amarillo-secundario				