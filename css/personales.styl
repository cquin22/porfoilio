color-amarillo-secundario = #FFE600
color-facebook = #3b5998
color-twitter = #4fa1d3
color-google = #cb4437	

body
	font-family: 'Raleway', sans-serif
	

header 
	background rgba(color-cafe-sublime, 1)
	height 70px
	width 100%
	transition all 1s ease-in
	//top 0
	position relative
	overflow hidden
	//z-index 99999999999

nav
	position absolute
	top 0
	right 0
	margin 0
	padding 0
	ul 
		list-style none
		margin 0
		padding 0
		li 
			display inline-block
						
p 
	font-size 16px
		
figure 
	margin 0
	padding 0		

.logo 
	margin 0
	height 70px
	img
		height 50px
		position absolute
		top 50%
		left 2px
		margin-top -25px

.menu
	background #222
	position fixed
	z-index 500
	top 70px
	width 30%
	right -100%
	overflow hidden
	height 100%
	max-height 1600px
	color white
	margin-right -3px
	padding 23px 29px
	font-family: 'Yanone Kaffeesatz', sans-serif;
	font-size 20px
	font-weight lighter


.face 
	background #222
	padding 30px 29px
	margin-right -3px
	height 70px
	line-height 70px	
	color white

	margin-top -10px
	span 
		font-size 20px
		
	&:hover
		background color-facebook
		color white


.twitter 
	background #222
	padding 30px 29px
	margin-right -3px
	color white
	height 70px
	line-height 70px
	span 
		font-size 20px			
	&:hover
		background color-twitter
		color white

.google 
	background #222
	padding 30px 29px
	margin-right -3px
	color white
	height 70px
	line-height 70px
	span 
		font-size 20px		
	&:hover
		background color-google
		color white




.icon-menu 
	background color-azul-principal
	padding 30px 29px
	margin-right -3px
	color white
	height 70px
	line-height 70px
	span 
		font-size 20px		
	&:hover
		background color-amarillo-secundario
		color color-cafe-sublime

.bg-head
	background url('../img/slides/slide2.jpg') center top
	background-attachment fixed
	background-size cover
	width 100%
	height 800px


.banner
	h1 
		font-size 6em
		font-family 'Raleway', sans-serif
		font-weight bold
		margin 0
		padding 0
	p 
		font-size 3em
		font-family 'Raleway', sans-serif
		font-weight lighter
		margin 0
		padding 0

.section-banner
	height auto


.aside
	background color-cafe-sublime
	height 373px
	position relative
	h3 
		color white
		font-family: 'Raleway', sans-serif	
	p 
		color white

